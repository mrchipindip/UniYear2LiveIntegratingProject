<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.prco203d.asthmaapp.WellActivity"
    tools:showIn="@layout/activity_well">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="25dp"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="300dp"
        android:id="@+id/topLeftFrameLayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="750"
            android:id="@+id/topLeftButton"
            android:textSize="32sp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="235dp"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="100dp"
        android:id="@+id/bottomLeftFrameLayout" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="4 Puffs                          Am"
            android:id="@+id/bottomLeftButton"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/topLeftFrameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="300dp"
        android:id="@+id/topRightFrameLayout">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <FrameLayout
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:layout_row="0"
                android:layout_column="0">

                <ImageButton
                    android:layout_width="113dp"
                    android:layout_height="112dp"
                    android:id="@+id/wheezingImageButton"
                    android:layout_gravity="center"
                    android:src="@drawable/coughing"
                    android:scaleType="fitCenter"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:layout_row="0"
                android:layout_column="6" >

                <ImageButton
                    android:layout_width="107dp"
                    android:layout_height="106dp"
                    android:id="@+id/chestTightnesImageButton"
                    android:layout_gravity="center"
                    android:src="@drawable/cant_talk"
                    android:scaleType="fitCenter"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:layout_row="8"
                android:layout_column="0" >

                <ImageButton
                    android:layout_width="106dp"
                    android:layout_height="105dp"
                    android:id="@+id/breathlessImageButton"
                    android:layout_gravity="center"
                    android:src="@drawable/hard_to_breathe"
                    android:scaleType="fitCenter"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="74dp"
                android:layout_height="73dp"
                android:layout_row="8"
                android:layout_column="6" >

                <ImageButton
                    android:layout_width="103dp"
                    android:layout_height="102dp"
                    android:id="@+id/coughingImageButton"
                    android:layout_gravity="center"
                    android:src="@drawable/cant_walk"
                    android:scaleType="fitCenter"/>
            </FrameLayout>
        </GridLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:id="@+id/bottomRightFrameLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="100dp"
        android:layout_alignTop="@+id/bottomLeftFrameLayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2 Puffs                         Pm"
            android:id="@+id/bottomRightButton"
            android:layout_gravity="center" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/peak_flow_personal_best"
        android:id="@+id/peakFlowPBTextView"
        android:layout_above="@+id/topRightFrameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/relief_symptoms"
        android:id="@+id/reliefSymptomsTextView"
        android:layout_above="@+id/topRightFrameLayout"
        android:layout_alignLeft="@+id/topRightFrameLayout"
        android:layout_alignStart="@+id/topRightFrameLayout" />

</RelativeLayout>
