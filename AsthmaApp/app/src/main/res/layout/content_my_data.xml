<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.prco203d.asthmaapp.MyDataActivity"
    tools:showIn="@layout/activity_my_data"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/buttonDelete"
        android:layout_below="@id/title"
        android:fillViewport="true"
        android:orientation="vertical"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Section 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_title"
                android:id="@+id/textViewTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text=""
                android:id="@+id/buttonEdit"
                android:onClick="openSetup"
                android:foreground="@drawable/edit__more_padded"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_name"
                android:id="@+id/textViewName"
                android:layout_below="@+id/textViewTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_age"
                android:id="@+id/textViewAge"
                android:layout_below="@+id/textViewName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_gender"
                android:id="@+id/textViewGender"
                android:layout_below="@+id/textViewAge"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_height"
                android:id="@+id/textViewHeight"
                android:layout_below="@+id/textViewGender"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/lineView2"
                android:layout_below="@+id/textViewHeight"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <!-- Section 2 -->
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text=""
                android:id="@+id/buttonEdit2"
                android:onClick="openSetup2"
                android:foreground="@drawable/edit__more_padded"
                android:layout_below="@+id/lineView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_peak_title"
                android:id="@+id/textViewPeakFlowTitle"
                android:layout_below="@+id/lineView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_peak"
                android:id="@+id/textViewPeakFlow"
                android:layout_below="@+id/textViewPeakFlowTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_warning"
                android:id="@+id/textViewWarningFlow"
                android:layout_below="@+id/textViewPeakFlow"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_critical"
                android:id="@+id/textViewCriticalFlow"
                android:layout_below="@+id/textViewWarningFlow"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/lineView3"
                android:layout_below="@+id/textViewCriticalFlow"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <!-- Section 3 -->
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text=""
                android:id="@+id/buttonEdit3"
                android:onClick="openSetup3"
                android:foreground="@drawable/edit__more_padded"
                android:layout_below="@+id/lineView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_dr_title"
                android:id="@+id/textViewDoctorDetails"
                android:layout_below="@+id/lineView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_appointment"
                android:id="@+id/textViewAppointment"
                android:layout_below="@+id/textViewDoctorDetails"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_dr"
                android:id="@+id/textViewDoctorName"
                android:layout_below="@+id/textViewAppointment"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_dr"
                android:id="@+id/textViewDoctorNumber"
                android:layout_below="@+id/textViewDoctorName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_ooh"
                android:id="@+id/textViewOoHName"
                android:layout_below="@+id/textViewDoctorNumber"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_ooh"
                android:id="@+id/textViewOoHNumber"
                android:layout_below="@+id/textViewOoHName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/lineView4"
                android:layout_below="@+id/textViewOoHNumber"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <!-- Section 4 -->
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text=""
                android:id="@+id/buttonEdit4"
                android:onClick="openSetup4"
                android:foreground="@drawable/edit__more_padded"
                android:layout_below="@+id/lineView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_inhaler_title"
                android:id="@+id/textViewInhalers"
                android:layout_below="@+id/lineView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_inhaler_preventer"
                android:id="@+id/textViewPreventer"
                android:layout_below="@+id/textViewInhalers"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_inhaler_reliever"
                android:id="@+id/textViewPreventerAM"
                android:layout_below="@+id/textViewPreventer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/lineView5"
                android:layout_below="@+id/textViewPreventerAM"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <!-- Section 5 -->
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text=""
                android:id="@+id/buttonEdit5"
                android:onClick="openSetup5"
                android:foreground="@drawable/edit__more_padded"
                android:layout_below="@+id/lineView5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_trigger_title"
                android:id="@+id/textViewTriggers"
                android:layout_below="@+id/lineView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                />


        </RelativeLayout>

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Data"
        android:id="@+id/buttonDelete"
        android:layout_marginBottom="30dp"
        android:background="@color/red"
        android:onClick="deleteData"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
