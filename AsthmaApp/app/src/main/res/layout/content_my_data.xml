<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.prco203d.asthmaapp.MyDataActivity"
    tools:showIn="@layout/activity_my_data"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/buttonDelete"
        android:layout_below="@id/title"
        android:fillViewport="true"
        android:orientation="vertical"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <!-- Section 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_s1_title"
                android:id="@+id/textViewS1Title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text=""
                android:id="@+id/buttonEdit"
                android:onClick="openSetup"
                android:foreground="@drawable/edit__more_padded"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_s1_desc"
                android:id="@+id/textViewS1Desc"
                android:layout_below="@+id/textViewS1Title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/buttonEdit"
                android:layout_toStartOf="@+id/buttonEdit" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/lineView2"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewS1Desc" />

            <!-- Section 2 -->
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text=""
                android:id="@+id/buttonEdit2"
                android:onClick="openSetup2"
                android:foreground="@drawable/edit__more_padded"
                android:layout_below="@+id/lineView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_s2_title"
                android:id="@+id/textViewS2Title"
                android:layout_below="@+id/lineView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_s2_desc"
                android:id="@+id/textViewS2Desc"
                android:layout_below="@+id/textViewS2Title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/buttonEdit2"
                android:layout_toStartOf="@+id/buttonEdit2" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/lineView3"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewS2Desc" />

            <!-- Section 3 -->
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text=""
                android:id="@+id/buttonEdit3"
                android:onClick="openSetup3"
                android:foreground="@drawable/edit__more_padded"
                android:layout_below="@+id/lineView3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_s3_title"
                android:id="@+id/textViewS3Title"
                android:layout_below="@+id/lineView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_s3_desc"
                android:id="@+id/textViewS3Desc"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewS3Title"
                android:layout_toLeftOf="@+id/buttonEdit3"
                android:layout_toStartOf="@+id/buttonEdit3" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/lineView4"
                android:layout_below="@+id/textViewS3Desc"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <!-- Section 4 -->
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text=""
                android:id="@+id/buttonEdit4"
                android:onClick="openSetup4"
                android:foreground="@drawable/edit__more_padded"
                android:layout_below="@+id/lineView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_s4_title"
                android:id="@+id/textViewS4Title"
                android:layout_below="@+id/lineView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_s4_desc"
                android:id="@+id/textViewS4Desc"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewS4Title"
                android:layout_toLeftOf="@+id/buttonEdit4"
                android:layout_toStartOf="@+id/buttonEdit4" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/lineView5"
                android:layout_below="@+id/textViewS4Desc"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <!-- Section 5 -->
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text=""
                android:id="@+id/buttonEdit5"
                android:onClick="openSetup5"
                android:foreground="@drawable/edit__more_padded"
                android:layout_below="@+id/lineView5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_s5_title"
                android:id="@+id/textViewS5Title"
                android:layout_below="@+id/lineView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/my_data_s5_desc"
                android:id="@+id/textViewS5Desc"
                android:layout_below="@+id/textViewS5Title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/buttonEdit5"
                android:layout_toStartOf="@+id/buttonEdit5" />


        </RelativeLayout>

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Data"
        android:id="@+id/buttonDelete"
        android:layout_marginBottom="30dp"
        android:background="@color/red"
        android:onClick="deleteData"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
