<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.prco203d.asthmaapp.MedRefActivity"
    tools:showIn="@layout/activity_med_ref">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/buttonDelete"
        android:layout_below="@id/title"
        android:fillViewport="true"
        android:orientation="vertical"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Everyday Care"
        android:id="@+id/everydayCareButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#8bc34a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When Feeling Worse"
        android:id="@+id/whenFeelingWorseButton"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/everydayCareButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/everydayCareButton"
        android:layout_alignEnd="@+id/everydayCareButton"
        android:background="#ffc107" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In An Asthma Attack"
        android:id="@+id/inAnAsthmaAttackButton"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/whenFeelingWorseButton"
        android:layout_alignRight="@+id/whenFeelingWorseButton"
        android:layout_alignEnd="@+id/whenFeelingWorseButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#f44336" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check in with this information regularly. How are you getting along with your day-today asthma medication? Are you having any asthma symptoms? Are you clear about what to do?"
        android:id="@+id/medicalCheckText"
        android:layout_marginTop="5dp"
        android:layout_below="@id/inAnAsthmaAttackButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Monthly Alarm"
        android:id="@+id/fiveSecondAlarm"
        android:onClick="enableAlarm"
        android:layout_below="@+id/medicalCheckText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disbale Monthly Alarm"
        android:id="@+id/disableMonthlyAlarm"
        android:onClick="disableAlarm"
        android:layout_below="@+id/fiveSecondAlarm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/lineView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/disableMonthlyAlarm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="External Links"
        android:id="@+id/textViewLinks"
        android:layout_below="@+id/lineView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NHS.CO.UK - Asthma"
        android:id="@+id/buttonNHS"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textViewLinks"
        android:layout_alignRight="@+id/whenFeelingWorseButton"
        android:layout_alignEnd="@+id/whenFeelingWorseButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickNHS"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asthma UK"
        android:id="@+id/buttonAsthmaUK"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/buttonNHS"
        android:layout_alignRight="@+id/whenFeelingWorseButton"
        android:layout_alignEnd="@+id/whenFeelingWorseButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickAsthmaUK"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WebMD - Asthma"
        android:id="@+id/buttonWebMD"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/buttonAsthmaUK"
        android:layout_alignRight="@+id/whenFeelingWorseButton"
        android:layout_alignEnd="@+id/whenFeelingWorseButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickWebMD"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient.info - Asthma"
        android:id="@+id/buttonPatientInfo"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/buttonWebMD"
        android:layout_alignRight="@+id/whenFeelingWorseButton"
        android:layout_alignEnd="@+id/whenFeelingWorseButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickPatientInfo"
        />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
