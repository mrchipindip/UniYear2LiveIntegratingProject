<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.prco203d.asthmaapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Well"
        android:id="@+id/buttonWell"
        android:layout_marginTop="154dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="openWell"
        android:background="@color/green"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unwell"
        android:id="@+id/buttonUnwell"
        android:layout_alignBottom="@+id/buttonWell"
        android:layout_centerHorizontal="true"
        android:onClick="openUnwell"
        android:background="@color/amber"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency"
        android:id="@+id/buttonEmergency"
        android:layout_alignBottom="@+id/buttonUnwell"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="openEmergency"
        android:background="@color/red"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Data"
        android:id="@+id/buttonOpenMyData"
        android:onClick="openMyData"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/buttonWell"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonGraphAndCalendar"
        android:layout_alignEnd="@+id/buttonGraphAndCalendar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graph and Calendar"
        android:id="@+id/buttonGraphAndCalendar"
        android:onClick="openGraphAndCalendar"
        android:layout_below="@+id/openMyData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Reference"
        android:id="@+id/buttonMedRef"
        android:layout_below="@+id/buttonGraphAndCalendar"
        android:onClick="openMedRef"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Settings"
        android:id="@+id/button"
        android:layout_below="@+id/buttonMedRef"
        android:onClick="openAppSettings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonEmergency"
        android:layout_alignEnd="@+id/buttonEmergency" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/daily_peak_flow"
        android:id="@+id/dailyPeakFlowTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonUnwell"
        android:layout_alignEnd="@+id/buttonUnwell" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/peakFlowVariableEditText"
        android:layout_below="@+id/dailyPeakFlowTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/dailyPeakFlowTextView"
        android:layout_alignEnd="@+id/dailyPeakFlowTextView"
        android:inputType="number"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/submitButton"
        android:layout_below="@+id/dailyPeakFlowTextView"
        android:layout_alignBottom="@+id/peakFlowVariableEditText"
        android:layout_toRightOf="@+id/peakFlowVariableEditText"
        android:layout_alignRight="@+id/buttonEmergency"
        android:layout_alignEnd="@+id/buttonEmergency" />

</RelativeLayout>
