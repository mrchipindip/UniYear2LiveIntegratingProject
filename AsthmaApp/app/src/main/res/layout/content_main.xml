<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.prco203d.asthmaapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Well"
        android:id="@+id/buttonWell"
        android:layout_marginTop="154dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="openWell"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unwell"
        android:id="@+id/buttonUnwell"
        android:layout_alignBottom="@+id/buttonWell"
        android:layout_centerHorizontal="true"
        android:onClick="openUnwell"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency"
        android:id="@+id/buttonEmergency"
        android:layout_alignBottom="@+id/buttonUnwell"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="openMyData"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Data"
        android:id="@+id/buttonMyData"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="openEmergency"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graph and Calendar"
        android:id="@+id/buttonGraphAndCalendar"
        android:layout_below="@+id/buttonMyData"
        android:layout_centerHorizontal="true"
        android:onClick="openGraphAndCalendar"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Reference"
        android:id="@+id/buttonMedRef"
        android:layout_below="@+id/buttonGraphAndCalendar"
        android:layout_centerHorizontal="true"
        android:onClick="openMedRef"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Settings"
        android:id="@+id/button"
        android:layout_below="@+id/buttonMedRef"
        android:layout_centerHorizontal="true"
        android:onClick="openAppSettings"
        />
</RelativeLayout>
